@model List<MovimientosModel>
@{
    ViewData["Title"] = "ListarMovimientos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="calculator" style="margin-top: 0px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-heading">
                    <h6>Tabla</h6>
                    <h4><i class="fa-solid fa-right-to-bracket"></i> Movimientos Registrados</h4>
                </div>
                <div class="col-lg-12">
                    <div class="naccs">
                        <div class="tabs">
                            <div class="row">
                                <div class="col-lg-12">
                                    <a asp-action="GuardarMovimientos" asp-controller="Movimientos" class="btn btn-success"><i class="bi bi-plus-circle"></i> Crear Nuevo</a>
                                    @if (Model != null && Model.Any())
                                    {
                                        <table class="listado">
                                            <thead>
                                                <tr>
                                                    <th>Id Movimiento</th>
                                                    <th>Fecha</th>
                                                    <th>Id Usuario</th>
                                                    <th>Id Empleado</th>
                                                    <th>Id Cupo</th>
                                                    <th>Tipo de movimiento</th>
                                                    <th>Id vehiculo</th>
                                                    <th>Acciones</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>@item.Idmovimiento</td>
                                                        <td>@item.FechaHora</td>
                                                        <td>@item.IdUsuario</td>
                                                        <td>@item.IdEmpleado</td>
                                                        <td>@item.IdCupo</td>
                                                        <td>@item.TipoMovimiento</td>
                                                        <td>@item.IdVehiculo</td>
                                                        <td>
                                                            <a asp-action="EditarMovimientos" asp-controller="Movimientos" class="btn btn-primary" asp-route-Idmovimiento="@item.Idmovimiento"><i class="bi bi-pen"></i>Editar</a>
                                                            <a asp-action="EliminarMovimientos" asp-controller="Movimientos" class="btn btn-danger" asp-route-Idmovimiento="@item.Idmovimiento">
                                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash-fill" viewBox="0 0 16 16">
                                                                    <path d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5M8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5m3 .5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 1 0" />
                                                                </svg>Eliminar
                                                            </a>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    }
                                    else
                                    {
                                        <p>No hay datos para mostrar.</p>
                                    }
                                    <form asp-action="GraficaMovimientos" asp-controller="Movimientos" method="post">
                                        <button type="submit" class="btn btn-secondary" style="margin-top: 20px;">
                                            <i class="bi bi-file-earmark-excel-fill"></i> Generar Grafica
                                        </button>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

