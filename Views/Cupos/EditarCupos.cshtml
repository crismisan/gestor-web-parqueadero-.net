@model CuposModel
@{
    ViewData["Title"] = "EditarCupos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="calculator" style="margin-top: 0px; padding: 130px 0px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-heading">
                    <h6>Editar</h6>
                    <h4><i class="fa-solid fa-car-side"></i> Cupos del parqueadero </h4>
                </div>
                <div class="col-lg-12">
                    <div class="naccs">
                        <div class="tabs">
                            <div class="row">
                                <div class="col-lg-12">
                                    <form asp-action="EditarCupos" asp-controller="Cupos" method="post">
                                        <input asp-for="Idcupo"  type="hidden" />
                                        <div class="mb-3">
                                            <label class="form-label">Numero</label>
                                            <input asp-for="Numero" type="text" class="form-control">
                                            <span asp-validation-for="Numero" class="text-darger"> </span>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label">Estado</label>
                                            <input asp-for="Estado" type="text" class="form-control">
                                            <span asp-validation-for="Estado" class="text-darger"> </span>
                                        </div>

                                        <button type="submit" class="btn btn-primary">Guardar</button>
                                        <a asp-action="ListarCupos" asp-controller="Cupos" class="btn btn-warning">Volver a la lista</a>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

