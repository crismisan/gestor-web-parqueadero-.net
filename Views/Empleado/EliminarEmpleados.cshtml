@model EmpleadoModel
@{
    ViewData["Title"] = "EliminarEmpleados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="calculator" style="margin-top: 0px; padding: 130px 0px;">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-heading">
                    <h6>Estado</h6>
                    <h4><i class="fa-solid fa-car-side"></i> Parqueadero </h4>
                </div>
                <div class="col-lg-12">
                    <div class="naccs">
                        <div class="tabs">
                            <div class="row">
                                <div class="col-lg-12">
                                    <form asp-action="EliminarEmpleados" asp-controller="Empleado" method="post">
                                        <input asp-for="Idempleado" type="hidden" class="form-control">

                                        <div class="alert alert-danger" role="alert">
                                            ¿Desea eliminar el contacto: @Html.DisplayTextFor(m => m.Nombre) ?
                                        </div>

                                        <button type="submit" class="btn btn-danger">Eliminar</button>
                                        <a asp-action="ListarEmpleados" asp-controller="Empleado" class="btn btn-warning">Volver a la lista</a>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>